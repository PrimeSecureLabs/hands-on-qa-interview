{
  "name": "central-svc",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "migrate": "sequelize-cli db:migrate --config src/config/sequelize-cli.js --migrations-path src/migrations",
    "migrate:undo": "sequelize-cli db:migrate:undo --config src/config/sequelize-cli.js --migrations-path src/migrations",
    "migration:create": "sequelize-cli migration:generate --config src/config/sequelize-cli.js --migrations-path src/migrations --name",
    "seed": "sequelize-cli db:seed:all --config src/config/sequelize-cli.js --seeders-path src/seeders",
    "seed:undo": "sequelize-cli db:seed:undo:all --config src/config/sequelize-cli.js --seeders-path src/seeders",
    "db:setup": "pnpm run migrate && pnpm run seed",
    "lint": "echo 'Linting...' && exit 0",
    "prepare": "husky",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run",
    "docker:build": "docker build -t svc-central .",
    "docker:run": "docker run -p 3000:3000 --env-file .env svc-central",
    "docker:compose:up": "docker-compose up --build",
    "docker:compose:down": "docker-compose down"
  },
  "keywords": [],
  "author": "Thezehel & Khai Dreams",
  "license": "ISC",
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.3",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "husky": "^9.1.7",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.1",
    "pg": "^8.16.0",
    "semantic-release": "^24.2.7",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "stripe": "^18.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/amqplib": "^0.10.7",
    "@types/pg": "^8.15.4",
    "nodemon": "^3.1.10",
    "sequelize-cli": "^6.6.3",
    "vitest": "^3.2.4"
  }
}